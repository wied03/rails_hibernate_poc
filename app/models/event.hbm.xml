<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="rubyobj.Bsw">
	<class name="Event" table="EVENTS">
      <id name="id" column="event_id">
          <generator class="native"/>
      </id>

      <property name="desc" column="title"/>

      <bag name="greetings" inverse="true" cascade="save-update">
        <key column="event_id"/>
        <one-to-many class="rubyobj.Bsw.Foo"/>
      </bag>

  </class>
  <class name="Foo" table="Foobar">
      <id name="id">
          <generator class="native"/>
      </id>
      <property name="greeting"/>
      <many-to-one name="event" class="rubyobj.Bsw.Event" column="event_id"/>
  </class>
</hibernate-mapping>
